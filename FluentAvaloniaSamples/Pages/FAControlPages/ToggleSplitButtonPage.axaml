<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ctrls="using:FluentAvaloniaSamples.Controls"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="720"
             x:Class="FluentAvaloniaSamples.Pages.ToggleSplitButtonPage"
             PreviewImage="/Assets/PageIcons/ToggleSplitButton.jpg">

    <StackPanel Spacing="8">
        <ctrls:ControlExample Header="A basic ToggleSplitButton"
                              XamlSource="{Binding XamlSource}">
            <ui:ToggleSplitButton Content="Split!">
                <ui:ToggleSplitButton.Flyout>
                    <Flyout Placement="Bottom">
                        <Grid Width="200" Height="100">
                            <TextBlock Text="SplitButton Flyout!" />
                        </Grid>
                    </Flyout>
                </ui:ToggleSplitButton.Flyout>
            </ui:ToggleSplitButton>
        </ctrls:ControlExample>
    </StackPanel>
</UserControl>
